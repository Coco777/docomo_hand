{
  "name": "docomo_hand",
  "version": "1.0.0",
  "description": "NTT DOCOMO Hackathon 2017",
  "repository": "git@github.com:koki-sato/docomo_hand-template.git",
  "author": "Koki Sato",
  "license": "MIT",
  "scripts": {
    "build": "run-s build:css build:js",
    "build:css": "node-sass src/styles/app.scss public/bundle.css",
